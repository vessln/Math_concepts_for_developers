def solve_quadratic_equation(a, b, c):
    """
    Returns the real solutions of the quadratic equation ax^2 + bx + c = 0
    """
    if a == 0:
        return [] if b == 0 else [-b / c]
            
    D = b**2 - 4 * a * c
    
    if D > 0:
        return [(-b - math.sqrt(D)) / (2*a), (-b + math.sqrt(D)) / (2*a)]
    elif D == 0:
        return  [(-b / (2*a))]
    else: 
        return []


